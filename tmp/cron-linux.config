files:
    "/etc/cron.d/my_cron":
        mode: "000644"
        owner: root
        group: root
        content: |
            * * * * * root /usr/local/bin/myscript.sh

    "/usr/local/bin/myscript.sh":
        mode: "000755"
        owner: root
        group: root
        content: |
            #!/bin/bash
            
commands:
    rm_old_cron:
        command: "rm -fr /etc/cron.d/*.bak"
        ignoreErrors: true